  },
  "devDependencies": {
    "@types/node": "12.0.1",
    "@types/webpack-env": "1.13.9",
    "clean-webpack-plugin": "2.0.2",
    "dotenv": "8.0.0",
    "npm-run-all": "4.1.5",
    "ts-loader": "6.0.0",
    "typescript": "3.4.5",
    "webpack": "4.31.0",
    "webpack-cli": "3.3.2",
    "webpack-merge": "4.2.1",
    "webpack-node-externals": "1.7.2"
  },
  "keywords": [
    "webpack",
    "graphql",
    "typescript",
    "apollo",
    "apollo-server"
  ]
}